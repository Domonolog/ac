{{!-- This is the base layout for your project, and will be used on every page. --}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="{{root}}css/styles.css">
  <link rel="stylesheet" href="{{root}}fonts/fonts.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.3.0/lodash.js"></script>
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

  <!-- favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="{{root}}favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="{{root}}favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="{{root}}favicon/favicon-16x16.png">
  <link rel="manifest" href="{{root}}favicon/site.webmanifest">

</head>
<body class="{{#ifpage 'index'}}home-page {{/ifpage}}{{bodyclass}}">
<div class="container">
  {{> mobile-menu}}
  <div class="content-wrap">
    {{> header}}

      <main class="main">

        {{> body}}

      </main>
    {{> footer}}
  </div>
</div>

<div class="popup">
  <input id="modal" type="checkbox">
  <label class="modal-background" for="modal"></label>

  <div class="modal-content">
    <div class="content">
      <label class="modal-close" for="modal">&#10005;</label>
      <div class="wrapper">
        <div class="left">
          <img src="{{root}}images/popup-img.png" alt="#">
        </div>
        <div class="right">
          <h2>Contact us</h2>
          <div class="name-mail__input">
            <div class="name__input">
              <span>Your name:</span>
              <input type="text" name="name" placeholder="Ex.: John Doe">
            </div>
            <div class="mail__input">
              <span>Your email:</span>
              <input type="text" name="mail" placeholder="Ex.: info@mail.com">
            </div>
          </div>

          <div class="select__popup">
            <span class="subject">Subject:</span>
            <select class="select" name="select">
              <option value="#" title="not-select" disabled>Not selected</option>
              <option value="#">Just wanted to say ”Hi”</option>
              <option value="#">Accessibility Help/question</option>
              <option value="#">Become a Contributor</option>
              <option value="#">Partnerships</option>
              <option value="#">Other</option>
            </select>
          </div>

          <div class="text__textarea">
            <span>Write your question here:</span>
            <textarea name="textarea"></textarea>
          </div>

          <div class="button">
            <a href="#" class="btn">Send a question</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="popup-audit">
  <input id="modal-audit" type="checkbox">
  <label class="modal-background" for="modal-audit"></label>

  <div class="modal-content">
    <div class="content">
      <label class="modal-close" for="modal-audit">&#10005;</label>
      <div class="logo-popup">
        <img src="{{root}}images/logo-popup.png" alt="#">
      </div>
      <div class="bar__content">
        <div class="wrap">
          <h2>Auditing process... <span>20%</span></h2>
          <div class="progress-bar">
          <span class="bar">
            <span class="progress" style="width: 20%"></span>
          </span>
          </div>
          <p class="hide1">Gathering website data...</p>
          <p class="hide2">Identify Germany BITV law compliance...</p>
          <p class="hide3">Preparing auditing results...</p>
        </div>
      </div>
      <label class="modal-button-close" for="modal-audit">Cancel</label>
    </div>
  </div>
</div>

<div class="popup-download">
  <input id="modal-download" type="checkbox">
  <label class="modal-background" for="modal-download"></label>

  <div class="modal-content">
    <div class="content">
      <label class="modal-close" for="modal-download">&#10005;</label>
      <div class="wrapper">
        <div class="left">
          <img src="{{root}}images/popup-download-img.png" alt="#">
        </div>
        <div class="right">
          <h2>Download audit report</h2>
          <p>We will send the results to your email as a PDF file:</p>
          <div class="name-mail__input w-100">
            <div class="name__input">
              <span>Your name:</span>
              <input type="text" name="name" placeholder="Ex.: John Doe">
            </div>
            <div class="mail__input">
              <span>Your email:</span>
              <input type="text" name="mail" placeholder="Ex.: info@mail.com">
            </div>
          </div>

          <label class="container">
            <p>I accept <a href="#">terms and conditions</a></p>
            <input type="checkbox" checked="checked">
            <span class="checkmark"></span>
          </label>

          <div class="button">
            <a href="#" class="btn">Send me the report</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{root}}js/init.js"></script>
</body>
</html>
